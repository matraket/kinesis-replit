modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "api-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "cms-dev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web-dev"

[[workflows.workflow]]
name = "api-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "API_PORT=3000 npm run dev"
waitForPort = 3000

[[workflows.workflow]]
name = "cms-dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd cms && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "web-dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npx vite"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 35665
externalPort = 3003
